{
  "title": "Copropriété & Structures collectives",
  "sections": [
    {
      "id": "copro-structures",
      "label": "Copropriété & Structures collectives",
      "fields": [
        {
          "path": "bien_en_copropriete",
          "id": "copro-bien-en-copro",
          "label": "Le bien est-il en copropriété ?",
          "name": "bien_en_copropriete",
          "type": "checkbox"
        },
        {
          "path": "lots_annexes",
          "id": "copro-lots-annexes",
          "label": "Lots et annexes (cave, parking, jardin...)",
          "name": "lots_annexes",
          "type": "array",
          "itemLabel": "Annexe",
          "itemSchema": {
            "fields": [
              {
                "path": "label",
                "id": "copro-lot-annexe-libelle",
                "label": "Libellé",
                "name": "label",
                "type": "text",
                "placeholder": "Ex : Cave, Parking, Jardin..."
              }
            ]
          },
          "showIf": {
            "path": "bien_en_copropriete",
            "equals": true
          }
        },
        {
          "path": "travaux_parties_communes",
          "id": "copro-travaux-parties-communes",
          "label": "Des travaux sont-ils en cours sur les parties communes ?",
          "name": "travaux_parties_communes",
          "type": "checkbox",
          "showIf": {
            "path": "bien_en_copropriete",
            "equals": true
          }
        },
        {
          "path": "gestion_copropriete",
          "id": "copro-gestion",
          "label": "Gestion de la copropriété",
          "name": "gestion_copropriete",
          "type": "select",
          "options": [
            "Syndic professionnel",
            "Syndic benevole",
            "Syndic cooperatif",
            "Auto-syndic",
            "Aucun syndic (situation a regulariser pour finaliser la vente)"
          ],
          "placeholder": "Sélectionnez",
          "showIf": {
            "path": "bien_en_copropriete",
            "equals": true
          }
        },
        {
          "path": "email_syndic",
          "id": "copro-email-syndic",
          "label": "Email du syndic",
          "name": "email_syndic",
          "type": "email",
          "showIf": {
            "path": "gestion_copropriete",
            "in": [
              "Syndic professionnel",
              "Syndic benevole",
              "Syndic cooperatif",
              "Auto-syndic"
            ]
          }
        },
        {
          "path": "tel_syndic",
          "id": "copro-tel-syndic",
          "label": "Numéro du syndic",
          "name": "tel_syndic",
          "type": "text",
          "placeholder": "Téléphone du syndic",
          "showIf": {
            "path": "gestion_copropriete",
            "in": [
              "Syndic professionnel",
              "Syndic benevole",
              "Syndic cooperatif",
              "Auto-syndic"
            ]
          }
        },
        {
          "path": "compteurs_individualises",
          "id": "copro-compteurs-individualises",
          "label": "Les compteurs sont-ils individualisés ?",
          "name": "compteurs_individualises",
          "type": "checkbox",
          "showIf": {
            "path": "bien_en_copropriete",
            "equals": true
          }
        },
        {
          "path": "types_compteurs",
          "id": "copro-types-compteurs",
          "label": "Types de compteurs individualisés",
          "name": "types_compteurs",
          "type": "array",
          "itemLabel": "Type de compteur",
          "itemSchema": {
            "fields": [
              {
                "path": "label",
                "id": "copro-type-compteur-label",
                "label": "Type",
                "name": "label",
                "type": "text",
                "placeholder": "Eau, Gaz, Electricité, Chauffage..."
              }
            ]
          },
          "showIf": {
            "path": "compteurs_individualises",
            "equals": true
          }
        },
        {
          "path": "conformite_installations",
          "id": "copro-conformite-installations",
          "label": "Les installations sont-elles conformes ?",
          "name": "conformite_installations",
          "type": "checkbox",
          "showIf": {
            "path": "compteurs_individualises",
            "equals": true
          }
        },
        {
          "path": "est_en_asl",
          "id": "copro-est-en-asl",
          "label": "Le bien est-il situé dans un lotissement / ASL / AFUL ?",
          "name": "est_en_asl",
          "type": "checkbox"
        },
        {
          "path": "nom_asl",
          "id": "copro-nom-asl",
          "label": "Nom de l'ASL / AFUL",
          "name": "nom_asl",
          "type": "text",
          "placeholder": "Nom de l'ASL / AFUL",
          "showIf": {
            "path": "est_en_asl",
            "equals": true
          }
        },
        {
          "path": "contact_asl",
          "id": "copro-contact-asl",
          "label": "Contact de l'ASL / AFUL",
          "name": "contact_asl",
          "type": "text",
          "placeholder": "Nom du représentant",
          "showIf": {
            "path": "est_en_asl",
            "equals": true
          }
        },
        {
          "path": "telephone_asl",
          "id": "copro-telephone-asl",
          "label": "Téléphone de l'ASL / AFUL",
          "name": "telephone_asl",
          "type": "text",
          "placeholder": "Téléphone",
          "showIf": {
            "path": "est_en_asl",
            "equals": true
          }
        }
      ]
    }
  ]
}
