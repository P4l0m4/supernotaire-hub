{
  "title": "Copropriété & Structures collectives",
  "sections": [
    {
      "id": "copro-structures",
      "label": "Copropriété & Structures collectives",
      "fields": [
        {
          "path": "type_structure_collective",
          "id": "copro-type-structure-collective",
          "name": "type_structure_collective",
          "label": "Le bien dépend :",
          "type": "select",
          "placeholder": "Sélectionnez une option",
          "options": [
            "D'une copropriété",
            "D’une association syndicale (ASL / AFUL…)",
            "D'aucune structure collective"
          ],
          "required": true
        },
        {
          "path": "type_copropriete",
          "id": "copro-type-copropriete",
          "label": "Type de copropriété",
          "name": "type_copropriete",
          "type": "select",
          "options": [
            "Copropriété classique (immeuble)",
            "Copropriété horizontale ou partielle (lotissements, maisons, etc)"
          ],
          "placeholder": "Sélectionnez le type de copropriété",
          "requiredIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          },
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "montant_annuel_charges",
          "id": "copro-montant-annuel-charges",
          "label": "Montant annuel moyen des charges de copropriété",
          "name": "montant_annuel_charges",
          "type": "number",
          "placeholder": "4000",
          "requiredIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          },
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "copro-fond-travaux",
          "label": "La copropriété dispose d'un fond de travaux",
          "type": "checkbox",
          "id": "copro-fond-travaux",
          "name": "copro_fond_travaux",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "copro-quote-part-lot",
          "id": "copro-quote-part-lot",
          "label": "Montant de la quote-part attachée au lot",
          "name": "copro_quote_part_lot",
          "placeholder": "1000",
          "type": "number",
          "showIf": {
            "path": "copro-fond-travaux",
            "equals": true
          }
        },
        {
          "path": "copro-charges-a-jour",
          "id": "copro-charges-a-jour",
          "label": "Le vendeur n'est pas à jour de ses charges de copropriété",
          "name": "copro_charges_a_jour",
          "type": "checkbox",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "montant_sommes_dues",
          "id": "copro-montant-sommes-dues",
          "label": "Montant approximatif des sommes dues",
          "name": "montant_sommes_dues",
          "placeholder": "500",
          "type": "number",
          "showIf": {
            "path": "copro-charges-a-jour",
            "equals": true
          }
        },
        {
          "path": "copro_lots_inclus_vente",
          "label": "Quels lots sont inclus dans la vente ?",
          "type": "checkbox-group",
          "id": "copro-lots-inclus-vente",
          "name": "copro_lots_inclus_vente",
          "options": [
            {
              "label": "Lot principal d’habitation",
              "value": "Lot principal d’habitation"
            },
            {
              "label": "Jardin / terrasse en lot",
              "value": "Jardin / terrasse en lot"
            },
            {
              "label": "Cave",
              "value": "Cave"
            },
            {
              "label": "Parking / box",
              "value": "Parking / box"
            },
            {
              "label": "Grenier / cellier",
              "value": "Grenier / cellier"
            },
            {
              "label": "Autre lot annexe",
              "value": "Autre lot annexe"
            }
          ],
          "requiredIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          },
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "copro_precision_autre_lot",
          "id": "copro-precision-autre-lot",
          "label": "Décrivez le lot annexe",
          "name": "copro_precision_autre_lot",
          "type": "text",
          "placeholder": "",
          "requiredIf": {
            "path": "copro_lots_inclus_vente",
            "contains": "Autre lot annexe"
          },
          "showIf": {
            "path": "copro_lots_inclus_vente",
            "contains": "Autre lot annexe"
          }
        },
        {
          "path": "gestion_copropriete",
          "id": "copro-gestion",
          "label": "Gestion de la copropriété",
          "name": "gestion_copropriete",
          "type": "select",
          "options": [
            "Syndic professionnel",
            "Syndic bénévole",
            "Syndic coopératif",
            "Aucun syndic"
          ],
          "required": true,
          "placeholder": "Sélectionnez",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D'une copropriété"
          }
        },
        {
          "path": "email_syndic",
          "id": "copro-email-syndic",
          "label": "Email du syndic",
          "name": "email_syndic",
          "type": "email",
          "placeholder": "syndic@example.com",
          "required": true,
          "showIf": {
            "path": "gestion_copropriete",
            "in": [
              "Syndic professionnel",
              "Syndic bénévole",
              "Syndic coopératif"
            ]
          }
        },
        {
          "path": "tel_syndic",
          "id": "copro-tel-syndic",
          "label": "Numéro du syndic",
          "name": "tel_syndic",
          "type": "text",
          "placeholder": "06 00 00 00 00",
          "showIf": {
            "path": "gestion_copropriete",
            "in": [
              "Syndic professionnel",
              "Syndic bénévole",
              "Syndic coopératif"
            ]
          }
        },
        {
          "path": "type_association_syndicale",
          "id": "copro-type-association-syndicale",
          "label": "Type de structure",
          "name": "type_association_syndicale",
          "type": "select",
          "options": [
            "ASL (Association Syndicale Libre)",
            "AFUL (Association Foncière Urbaine Libre)",
            "Autre"
          ],
          "placeholder": "Sélectionnez le type",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D’une association syndicale (ASL / AFUL…)"
          }
        },
        {
          "path": "asl_cotisations_a_jour",
          "id": "copro-asl-cotisations-a-jour",
          "label": "Le vendeur n'est pas à jour de ses cotisations",
          "name": "asl_cotisations_a_jour",
          "type": "checkbox",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D’une association syndicale (ASL / AFUL…)"
          }
        },
        {
          "path": "email_asl",
          "id": "copro-email-asl",
          "label": "Email du gestionnaire",
          "name": "email_asl",
          "type": "text",
          "required": true,
          "placeholder": "gestionnaire@example.com",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D’une association syndicale (ASL / AFUL…)"
          }
        },
        {
          "path": "telephone_asl",
          "id": "copro-telephone-asl",
          "label": "Téléphone du gestionnaire",
          "name": "telephone_asl",
          "type": "text",
          "placeholder": "06 00 00 00 00",
          "showIf": {
            "path": "type_structure_collective",
            "equals": "D’une association syndicale (ASL / AFUL…)"
          }
        },
        {
          "path": "precision_type_structure",
          "id": "copro-precision-type-structure",
          "label": "Précisez le type de structure",
          "name": "precision_type_structure",
          "type": "text",
          "placeholder": "Type de structure",
          "requiredIf": {
            "path": "type_association_syndicale",
            "equals": "Autre"
          },
          "showIf": {
            "path": "type_association_syndicale",
            "equals": "Autre"
          }
        }
      ]
    }
  ]
}
