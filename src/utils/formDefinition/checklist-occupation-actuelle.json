{
  "title": "Occupation actuelle",
  "sections": [
    {
      "id": "occupation-actuelle",
      "label": "Occupation actuelle",
      "fields": [
        {
          "path": "bien_occupe",
          "id": "occupation-bien-occupe",
          "label": "Le bien est actuellement occupé",
          "name": "bien_occupe",
          "type": "checkbox"
        },
        {
          "path": "bien_libre_moment_vente",
          "id": "occupation-bien-libre-vente",
          "label": "Le bien ne sera pas libre au moment de la vente",
          "name": "bien_libre_moment_vente",
          "type": "checkbox",
          "showIf": {
            "path": "bien_occupe",
            "equals": true
          }
        },
        {
          "path": "date_liberation",
          "id": "occupation-date-liberation",
          "label": "Date estimée de libération du bien",
          "name": "date_liberation",
          "type": "date",
          "mode": "date-picker",
          "placeholder": "jj/mm/aaaa",
          "requiredIf": {
            "all": [
              { "path": "bien_occupe", "equals": true },
              { "path": "bien_libre_moment_vente", "equals": true }
            ]
          },
          "showIf": {
            "all": [
              { "path": "bien_occupe", "equals": true },
              { "path": "bien_libre_moment_vente", "equals": true }
            ]
          }
        },
        {
          "path": "par_qui",
          "id": "occupation-par-qui",
          "label": "Qui occupe le bien ?",
          "name": "par_qui",
          "type": "select",
          "options": [
            "Un locataire",
            "Le propriétaire vendeur",
            "Un occupant à titre gratuit",
            "Un indivisaire (plusieurs propriétaires)",
            "Un squatteur"
          ],
          "placeholder": "Sélectionnez l'occupant",
          "showIf": {
            "path": "bien_occupe",
            "equals": true
          }
        },
        {
          "path": "occupant_gratuit_nom",
          "id": "occupation-gratuit-nom",
          "label": "Nom complet de l'occupant",
          "name": "occupant_gratuit_nom",
          "type": "text",
          "placeholder": "Nom complet",
          "showIf": {
            "path": "par_qui",
            "equals": "Occupant gratuit"
          }
        },
        {
          "path": "nature_occupation",
          "id": "occupation-nature",
          "label": "Nature de l'occupation",
          "name": "nature_occupation",
          "type": "select",
          "options": [
            "Residence principale",
            "Residence secondaire",
            "Occupation temporaire"
          ],
          "placeholder": "Sélectionnez la nature de l'occupation",
          "requiredIf": {
            "path": "par_qui",
            "equals": "Le propriétaire vendeur"
          },
          "showIf": {
            "path": "par_qui",
            "equals": "Le propriétaire vendeur"
          }
        },
        {
          "path": "procedure_en_cours",
          "id": "occupation-procedure",
          "label": "Une procédure est-elle en cours ?",
          "name": "procedure_en_cours",
          "type": "checkbox",
          "requiredIf": {
            "path": "par_qui",
            "equals": "Un squatteur"
          },
          "showIf": {
            "path": "par_qui",
            "equals": "Un squatteur"
          }
        },
        {
          "path": "type_bail",
          "id": "occupation-type-bail",
          "label": "Type de bail",
          "name": "type_bail",
          "type": "select",
          "options": ["Habitation nue", "Meublé", "Autre"],
          "placeholder": "Sélectionnez le type de bail",
          "requiredIf": {
            "path": "par_qui",
            "equals": "Un locataire"
          },
          "showIf": {
            "path": "par_qui",
            "equals": "Un locataire"
          }
        },
        {
          "path": "bail_autre_precisions",
          "id": "occupation-type-bail-autre",
          "label": "Précisez le type de bail",
          "name": "bail_autre_precisions",
          "type": "text",
          "placeholder": "Précisez le type de bail",
          "showIf": {
            "all": [
              { "path": "par_qui", "equals": "Un locataire" },
              { "path": "type_bail", "equals": "Autre" }
            ]
          }
        }
      ]
    }
  ]
}
