              {
                "path": "tantiemes_speciaux.chauffage",
                "label": "Tantièmes spéciaux — Chauffage",
                "name": "tantiemes_speciaux_chauffage",
                "type": "number",
                "min": 0,
                "step": 1,
                "placeholder": "260",
