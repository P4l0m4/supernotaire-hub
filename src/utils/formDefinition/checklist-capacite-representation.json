          "label": "Type de protection",
          "name": "type_protection_personne_physique",
          "type": "select",
          "options": [
            "Curatelle",
            "Tutelle",
            "Mandat de protection future ou autre"
          ],
          "placeholder": "Selectionnez le type",
          "showIf": {
            "path": "sous_protection_personne_physique",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "sous_protection_personne_physique",
            "equals": "Oui"
          }
        },
        {
          "path": "type_representation_personne_physique",
          "id": "capacite-type-representation-physique",
          "label": "Type de représentation",
          "name": "type_representation_personne_physique",
          "type": "select",
          "options": [
            "Mandat simple (procuration sous seing privé)",
            "Représentation d\u2019un majeur protégé"
          ],
          "placeholder": "Sélectionnez le type de représentation",
          "showIf": {
            "all": [
              { "path": "statut_partie", "equals": "Personne physique" },
              { "path": "bien_vendu_en_nom_propre", "equals": "Oui" }
            ]
          },
          "requiredIf": {
            "all": [
              { "path": "statut_partie", "equals": "Personne physique" },
              { "path": "bien_vendu_en_nom_propre", "equals": "Oui" }
            ]
          }
        },
        {
          "path": "type_protection_representation",
          "id": "capacite-type-protection-representation",
          "label": "Type de protection pour la représentation",
          "name": "type_protection_representation",
          "type": "select",
          "options": [
            "Tutelle",
            "Curatelle",
            "Mandataire spécial",
            "Habilitation familiale"
          ],
          "placeholder": "Selectionnez le type de protection",
          "showIf": {
            "path": "type_representation_personne_physique",
            "equals": "Représentation d\u2019un majeur protégé"
          },
          "requiredIf": {
            "path": "type_representation_personne_physique",
            "equals": "Représentation d\u2019un majeur protégé"
          }
        },
        {
          "path": "type_entite_personne_morale",
          "id": "capacite-type-entite-pm",
          "label": "Type d'entité",
          "name": "type_entite_personne_morale",
          "type": "select",
          "options": ["Société (SARL, SAS, SCI, etc.)", "Association"],
          "placeholder": "Sélectionnez le type",
          "requiredIf": {
            "path": "statut_partie",
            "equals": "Personne morale"
          },
          "showIf": { "path": "statut_partie", "equals": "Personne morale" }
        },
        {
          "path": "entite_representee_par_mandataire",
          "id": "capacite-entite-mandataire",
          "label": "L'entité est-elle représentée par un mandataire ?",
          "name": "entite_representee_par_mandataire",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "requiredIf": {
            "path": "statut_partie",
            "equals": "Personne morale"
          },
          "showIf": { "path": "statut_partie", "equals": "Personne morale" }
        }
      ]
