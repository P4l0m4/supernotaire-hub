          "tooltip": "Tutelle, curatelle, habilitation, mandat de protection future...",
          "type": "select",
          "options": ["Oui", "Non"],
          "showIf": {
            "all": [
              { "path": "statut_partie", "equals": "Personne physique" },
              { "path": "bien_vendu_en_nom_propre", "equals": "Non" }
            ]
          },
          "requiredIf": {
            "all": [
              { "path": "statut_partie", "equals": "Personne physique" },
              { "path": "bien_vendu_en_nom_propre", "equals": "Non" }
            ]
          }
        },
        {
          "path": "type_protection_personne_physique",
