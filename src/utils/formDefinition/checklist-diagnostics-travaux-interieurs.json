{
  "title": "Diagnostics & Travaux intérieurs",
  "sections": [
    {
      "id": "diagnostics",
      "label": "Diagnostics",
      "fields": [
        {
          "path": "diagnostics.raccordToutALegout",
          "id": "diagnostics_raccord_tout_a_legout",
          "label": "Le bien est-il raccordé au tout-à-l’égout ?",
          "name": "raccordToutALegout",
          "type": "checkbox"
        },
        {
          "path": "diagnostics.dateDiagAssainissement",
          "id": "diagnostics_date_diag_assainissement",
          "label": "Date du diagnostic (assainissement)",
          "name": "dateDiagAssainissement",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.raccordToutALegout",
            "equals": true
          },
          "requiredIf": {
            "path": "diagnostics.raccordToutALegout",
            "equals": true
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.zoneTermites",
          "id": "diagnostics_zone_termites",
          "label": "Le bien est situé dans une zone délimitée par un arrêté préfectoral termites",
          "name": "zoneTermites",
          "type": "checkbox"
        },
        {
          "path": "diagnostics.dateDiagTermites",
          "id": "diagnostics_date_diag_termites",
          "label": "Date du diagnostic (termites)",
          "name": "dateDiagTermites",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.zoneTermites",
            "equals": true
          },
          "requiredIf": {
            "path": "diagnostics.zoneTermites",
            "equals": true
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.zoneRisques",
          "id": "diagnostics_zone_risques",
          "label": "Le bien situé dans une zone à risques",
          "tooltip": "naturels, miniers, technologiques, radon…",
          "name": "zoneRisques",
          "type": "checkbox"
        },
        {
          "path": "diagnostics.dateErp",
          "id": "diagnostics_date_erp",
          "label": "Date du diagnostic (ERP)",
          "name": "dateErp",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.zoneRisques",
            "equals": true
          },
          "requiredIf": {
            "path": "diagnostics.zoneRisques",
            "equals": true
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.dateConstruction",
          "id": "diagnostics_date_construction",
          "label": "Date de construction",
          "name": "dateConstruction",
          "type": "date",
          "mode": "date-picker",
          "placeholder": "jj/mm/aaaa",
          "tooltip": "Si la date exacte est inconnue, renseigner une date estimée."
        },
        {
          "path": "diagnostics.dateCrepPlomb",
          "id": "diagnostics_date_crep_plomb",
          "label": "Date du dernier diagnostic plomb (CREP)",
          "name": "dateCrepPlomb",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-1949"
            }
          },
          "requiredIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-1949"
            }
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.dateAmiante",
          "id": "diagnostics_date_amiante",
          "label": "Date du dernier diagnostic amiante (DTA)",
          "name": "dateAmiante",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-1997"
            }
          },
          "requiredIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-1997"
            }
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.installationGaz15Ans",
          "id": "diagnostics_installation_gaz_15ans",
          "label": "Le logement est-il équipé d’une installation gaz de plus de 15 ans ?",
          "name": "installationGaz15Ans",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "requiredIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-2008"
            }
          },
          "showIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-2008"
            }
          }
        },
        {
          "path": "diagnostics.dateDiagnosticGaz",
          "id": "diagnostics_date_diagnostic_gaz",
          "label": "Date du dernier diagnostic gaz",
          "name": "dateDiagnosticGaz",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.installationGaz15Ans",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "diagnostics.installationGaz15Ans",
            "equals": "Oui"
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.installationElec15Ans",
          "id": "diagnostics_installation_elec_15ans",
          "label": "Le logement est-il équipé d’une installation électrique de plus de 15 ans ?",
          "name": "installationElec15Ans",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "requiredIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-2008"
            }
          },
          "showIf": {
            "path": "diagnostics.dateConstruction",
            "is": {
              "before": "01-01-2008"
            }
          }
        },
        {
          "path": "diagnostics.dateDiagnosticElectricite",
          "id": "diagnostics_date_diagnostic_electricite",
          "label": "Date du dernier diagnostic électricité",
          "name": "dateDiagnosticElectricite",
          "type": "date",
          "mode": "date-picker",
          "showIf": {
            "path": "diagnostics.installationElec15Ans",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "diagnostics.installationElec15Ans",
            "equals": "Oui"
          },
          "placeholder": "jj/mm/aaaa"
        },
        {
          "path": "diagnostics.dateDpe",
          "id": "diagnostics_date_dpe",
          "label": "Date du dernier DPE",
          "name": "dateDpe",
          "type": "date",
          "mode": "date-picker",
          "required": true,
          "placeholder": "jj/mm/aaaa"
        }
      ]
    },
    {
      "id": "travaux",
      "label": "Travaux intérieurs",
      "fields": [
        {
          "path": "travaux.realises",
          "id": "travaux_realises",
          "label": "Des travaux ont-ils été réalisés dans le bien ?",
          "name": "realises",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option"
        },
        {
          "path": "travaux.nature",
          "id": "travaux_nature",
          "label": "Les travaux portent sur :",
          "name": "nature",
          "type": "checkbox-group",
          "requiredIf": {
            "path": "travaux.realises",
            "equals": "Oui"
          },
          "showIf": {
            "path": "travaux.realises",
            "equals": "Oui"
          },
          "options": [
            {
              "label": "La structure ou le gros œuvre (toiture, murs porteurs, planchers, etc.)",
              "value": "structure_gros_oeuvre"
            },
            {
              "label": "La distribution intérieure (cloisons non porteuses, nombre de pièces)",
              "value": "distribution_interieure"
            },
            {
              "label": "Les réseaux techniques (électricité, chauffage, gaz, VMC, plomberie, etc.)",
              "value": "reseaux_techniques"
            },
            {
              "label": "Les locaux techniques (salle de bain, cuisine, etc.)",
              "value": "locaux_techniques"
            },
            {
              "label": "Le confort et/ou l’équipement (climatisation, cheminée, domotique, rangements intégrés, etc.)",
              "value": "confort_equipement"
            },
            {
              "label": "Entretien et/ou embellissement",
              "value": "entretien_embellissement"
            }
          ]
        },
        {
          "path": "travaux.realisesPar",
          "id": "travaux_realises_par",
          "label": "Travaux réalisés par :",
          "name": "realisesPar",
          "type": "select",
          "options": ["Un professionnel", "Le vendeur lui-même"],
          "placeholder": "Sélectionner",
          "requiredIf": {
            "any": [
              { "path": "travaux.nature", "contains": "structure_gros_oeuvre" },
              {
                "path": "travaux.nature",
                "contains": "distribution_interieure"
              },
              { "path": "travaux.nature", "contains": "reseaux_techniques" },
              { "path": "travaux.nature", "contains": "locaux_techniques" },
              { "path": "travaux.nature", "contains": "confort_equipement" }
            ]
          },
          "showIf": {
            "any": [
              { "path": "travaux.nature", "contains": "structure_gros_oeuvre" },
              {
                "path": "travaux.nature",
                "contains": "distribution_interieure"
              },
              { "path": "travaux.nature", "contains": "reseaux_techniques" },
              { "path": "travaux.nature", "contains": "locaux_techniques" },
              { "path": "travaux.nature", "contains": "confort_equipement" }
            ]
          }
        }
      ]
    }
  ]
}
