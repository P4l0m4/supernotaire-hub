{
  "title": "Charges & Taxes",
  "sections": [
    {
      "id": "bien",
      "label": "Bien",
      "fields": [
        {
          "path": "type_bien",
          "id": "charges-taxes-type-bien",
          "label": "Type de bien",
          "name": "type_bien",
          "type": "select",
          "options": ["Appartement", "Maison"],
          "placeholder": "Sélectionnez le type de bien",
          "required": true
        }
      ]
    },
    {
      "id": "chauffage",
      "label": "Chauffage",
      "fields": [
        {
          "path": "type_chauffage",
          "id": "charges-taxes-type-chauffage",
          "label": "Type de chauffage",
          "name": "type_chauffage",
          "type": "select",
          "options": [
            "Pompe à chaleur",
            "Gaz",
            "Fioul",
            "Bois",
            "Électrique",
            "Autre"
          ],
          "placeholder": "Sélectionnez le type de chauffage",
          "required": true
        },
        {
          "path": "type_chauffage_autre",
          "id": "charges-taxes-type-chauffage-autre",
          "label": "Précisez le type de chauffage",
          "name": "type_chauffage_autre",
          "type": "text",
          "placeholder": "Chauffage à...",
          "showIf": {
            "path": "type_chauffage",
            "equals": "Autre"
          },
          "requiredIf": {
            "path": "type_chauffage",
            "equals": "Autre"
          }
        },
        {
          "path": "date_entretien_chauffage",
          "id": "charges-taxes-date-entretien-chauffage",
          "label": "Date du dernier entretien du chauffage",
          "name": "date_entretien_chauffage",
          "type": "date",
          "mode": "date-picker",
          "placeholder": "jj/mm/aaaa",
          "maxDate": "today",
          "required": true
        },
        {
          "path": "date_ramonage",
          "id": "charges-taxes-date-ramonage",
          "label": "Date du dernier ramonage",
          "name": "date_ramonage",
          "type": "date",
          "mode": "date-picker",
          "placeholder": "jj/mm/aaaa",
          "maxDate": "today",
          "required": true
        }
      ]
    },
    {
      "id": "assainissement",
      "label": "Assainissement",
      "fields": [
        {
          "path": "mode_assainissement",
          "id": "charges-taxes-mode-assainissement",
          "label": "Mode d'assainissement",
          "name": "mode_assainissement",
          "type": "select",
          "options": ["Collectif", "Individuel"],
          "placeholder": "Sélectionnez le mode d'assainissement",
          "required": true
        }
      ]
    },
    {
      "id": "fiscalite",
      "label": "Fiscalité",
      "fields": [
        {
          "path": "situation_fiscale",
          "id": "charges-taxes-situation-fiscale",
          "label": "Situation d'occupation fiscale",
          "name": "situation_fiscale",
          "type": "select",
          "options": [
            "Résidence principale",
            "Résidence secondaire",
            "Bien vacant"
          ],
          "placeholder": "Sélectionnez la situation fiscale",
          "required": true
        },
        {
          "path": "montant_taxe_fonciere",
          "id": "charges-taxes-montant-taxe-fonciere",
          "label": "Montant annuel de la taxe foncière",
          "name": "montant_taxe_fonciere",
          "type": "number",
          "placeholder": "0 si nul",
          "required": true
        },
        {
          "path": "presence_teom",
          "id": "charges-taxes-presence-teom",
          "label": "Présence d'une TEOM ? (Taxe d'enlèvement des ordures ménagères)",
          "name": "presence_teom",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true,
          "tooltip": "Taxe d'enlèvement des ordures ménagères"
        },
        {
          "path": "bien_soumis_taxe_habitation",
          "id": "charges-taxes-soumis-taxe-habitation",
          "label": "Le bien est-il soumis à la taxe d'habitation ?",
          "name": "bien_soumis_taxe_habitation",
          "type": "select",
          "placeholder": "Sélectionnez une option",
          "options": ["Oui", "Non"],
          "required": true
        },
        {
          "path": "montant_derniere_taxe_habitation",
          "id": "charges-taxes-montant-derniere-taxe-habitation",
          "label": "Montant annuel de la dernière taxe d'habitation",
          "name": "montant_derniere_taxe_habitation",
          "type": "text",
          "placeholder": "650",
          "requiredIf": {
            "path": "bien_soumis_taxe_habitation",
            "equals": "Oui"
          },
          "showIf": {
            "path": "bien_soumis_taxe_habitation",
            "equals": "Oui"
          }
        }
      ]
    },
    {
      "id": "pret",
      "label": "Prêt",
      "fields": [
        {
          "label": "Existe t-il un prêt immobilier en cours sur le bien ?",
          "path": "pret_immobilier_en_cours",
          "id": "charges-taxes-pret-immobilier-en-cours",
          "name": "pret_immobilier_en_cours",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true
        },
        {
          "label": "Nom de la banque",
          "path": "nom_banque",
          "id": "charges-taxes-nom-banque",
          "name": "nom_banque",
          "type": "text",
          "placeholder": "Crédit Agricole, BNP Paribas...",
          "showIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          }
        },
        {
          "label": "Numéro du prêt",
          "path": "numero_pret",
          "id": "charges-taxes-numero-pret",
          "name": "numero_pret",
          "type": "text",
          "placeholder": "1234567890",
          "showIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          }
        },
        {
          "label": "Date de la dernière échéance",
          "path": "date_derniere_echeance",
          "id": "charges-taxes-date-derniere-echeance",
          "name": "date_derniere_echeance",
          "type": "date",
          "mode": "date-picker",
          "placeholder": "jj/mm/aaaa",
          "maxDate": "today",
          "startDate": "today",
          "showIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          },
          "requiredIf": {
            "path": "pret_immobilier_en_cours",
            "equals": "Oui"
          }
        }
      ]
    },
    {
      "id": "beneficiaires",
      "label": "Bénéficiaires",
      "fields": [
        {
          "label": "Coordonnées bancaires des bénéficiaires de la vente",
          "type": "array",
          "path": "coordonnees_bancaires_beneficiaires",
          "id": "charges-taxes-coordonnees-bancaires-beneficiaires",
          "name": "coordonnees_bancaires_beneficiaires",
          "required": true,
          "itemLabel": "Bénéficiaire {{index}}",
          "itemSchema": {
            "fields": [
              {
                "label": "Rôle du bénéficiaire",
                "path": "role_beneficiaire",
                "id": "charges-taxes-role-beneficiaire-{{index}}",
                "name": "role_beneficiaire",
                "type": "select",
                "options": [
                  "Propriétaire du bien (personne physique ou morale)",
                  "Banque prêteuse (si prêt sur le bien)",
                  "Mandataire (agence, etc)",
                  "Syndic (si impayés en copropriété)",
                  "Autre"
                ],
                "placeholder": "Sélectionnez un rôle",
                "required": true
              },
              {
                "label": "Ce bénéficiaire perçoit-il une commission sur la vente ?",
                "path": "beneficiaire_percoit_commission",
                "id": "charges-taxes-beneficiaire-percoit-commission-{{index}}",
                "name": "beneficiaire_percoit_commission",
                "type": "select",
                "options": ["Oui", "Non"],
                "placeholder": "Sélectionnez une option",
                "requiredIf": {
                  "path": "role_beneficiaire",
                  "equals": "Mandataire (agence, etc)"
                },
                "showIf": {
                  "path": "role_beneficiaire",
                  "equals": "Mandataire (agence, etc)"
                }
              },
              {
                "label": "Montant de la commission (pourcentage ou montant fixe)",
                "path": "montant_commission",
                "id": "charges-taxes-montant-commission-{{index}}",
                "name": "montant_commission",
                "type": "text",
                "placeholder": "5%, 1500 €...",
                "requiredIf": {
                  "path": "beneficiaire_percoit_commission",
                  "equals": "Oui"
                },
                "showIf": {
                  "path": "beneficiaire_percoit_commission",
                  "equals": "Oui"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
