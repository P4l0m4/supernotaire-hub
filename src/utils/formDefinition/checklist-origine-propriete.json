{
  "title": "Origine de propriété",
  "sections": [
    {
      "id": "origine-propriete",
      "label": "Origine de propriété",
      "fields": [
        {
          "label": "Date d'acquisition du bien",
          "path": "date_acquisition",
          "id": "origine-propriete-date-acquisition",
          "name": "date_acquisition",
          "type": "date",
          "mode": "date-picker",
          "maxDate": "today",
          "placeholder": "jj/mm/aaaa",
          "required": true
        },
        {
          "path": "type_proprietaire",
          "id": "origine-propriete-type-proprietaire",
          "label": "Le propriétaire du bien est une :",
          "name": "type_proprietaire",
          "type": "select",
          "options": ["Personne physique", "Personne morale"],
          "placeholder": "Sélectionner une option",
          "required": true
        },
        {
          "label": "Mode d'acquisition",
          "path": "mode_acquisition_personne_physique",
          "id": "origine-propriete-mode-acquisition-personne-physique",
          "name": "mode_acquisition_personne_physique",
          "type": "select",
          "placeholder": "Sélectionner une option",
          "options": [
            "Achat classique",
            "Succession / Testament",
            "Achat en VEFA (Vente sur plan / programme neuf)",
            "Donation entre vifs",
            "Cession de nue-propriété / usufruit",
            "Partage / Licitation",
            "Échange",
            "Adjudication / Vente aux enchères",
            "Dation en paiement (d'une dette)",
            "Vente à terme / paiement différé"
          ],
          "requiredIf": {
            "path": "type_proprietaire",
            "value": "Personne physique"
          },
          "showIf": {
            "path": "type_proprietaire",
            "value": "Personne physique"
          }
        },
        {
          "label": "Mode d'acquisition",
          "path": "mode_acquisition_personne_morale",
          "id": "origine-propriete-mode-acquisition-personne-morale",
          "name": "mode_acquisition_personne_morale",
          "type": "select",
          "placeholder": "Sélectionner une option",
          "options": [
            "Achat classique",
            "Apport en société",
            "Apport partiel d’actif (scission, fusion, TUP)",
            "Achat en VEFA (Vente sur plan / programme neuf)",
            "Cession de nue-propriété / usufruit",
            "Partage / Licitation",
            "Échange",
            "Adjudication / Vente aux enchères",
            "Dation en paiement (d'une dette)",
            "Vente à terme / paiement différé"
          ],
          "requiredIf": {
            "field": "type_proprietaire",
            "value": "Personne morale"
          },
          "showIf": {
            "field": "type_proprietaire",
            "value": "Personne morale"
          }
        },
        {
          "label": "Mode de transmission",
          "path": "mode_transmission",
          "id": "origine-propriete-mode-transmission",
          "name": "mode_transmission",
          "type": "select",
          "placeholder": "Sélectionner une option",
          "options": [
            "Succession (pas de bien précis attribué)",
            "Legs particulier (attribution d’un bien précis par testament)"
          ],
          "requiredIf": {
            "field": "mode_acquisition_personne_physique",
            "value": ["Succession / Testament"]
          },
          "showIf": {
            "field": "mode_acquisition_personne_physique",
            "value": ["Succession / Testament"]
          }
        }
      ]
    }
  ]
}
