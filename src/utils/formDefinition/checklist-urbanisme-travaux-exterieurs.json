{
  "title": "Urbanisme \u0026 Travaux extérieurs",
  "sections": [
    {
      "id": "procedure_contentieux",
      "label": "Procédures administratives \u0026 contentieux",
      "fields": [
        {
          "path": "procedure.enCours",
          "id": "procedure_en_cours",
          "label": "Une procédure administrative est-elle en cours ?",
          "tooltip": "Exemples : refus de permis, obligation de démolition…",
          "name": "procedure.enCours",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true
        },
        {
          "path": "procedure.types",
          "id": "types_procedure",
          "label": "Sélectionnez le(s) type(s) de procédure(s)",
          "name": "procedure.types",
          "type": "checkbox-group",
          "requiredIf": {
            "path": "procedure.enCours",
            "equals": "Oui"
          },
          "showIf": {
            "path": "procedure.enCours",
            "equals": "Oui"
          },
          "options": [
            {
              "label": "Procédure de droit de préemption",
              "value": "preemption"
            },
            {
              "label": "Astreinte administrative",
              "value": "astreinte_administrative"
            },
            {
              "label": "Obligation de démolition ou de remise en état",
              "value": "demolition_remise_etat"
            },
            {
              "label": "Obligation de régularisation",
              "value": "regularisation"
            },
            {
              "label": "Procès-verbal d’infraction d’urbanisme",
              "value": "pv_infraction_urbanisme"
            },
            {
              "label": "Mise en demeure de mise en conformité",
              "value": "mise_en_demeure"
            },
            {
              "label": "Arrêté interruptif de travaux",
              "value": "arrete_interruptif_travaux"
            },
            {
              "label": "Refus de déclaration préalable",
              "value": "refus_dp"
            },
            {
              "label": "Retrait ou annulation de permis",
              "value": "retrait_annulation_permis"
            },
            {
              "label": "Refus de permis de construire",
              "value": "refus_pc"
            },
            {
              "label": "Procédure administrative",
              "value": "procedure_administrative"
            },
            {
              "label": "Autre",
              "value": "autre"
            }
          ]
        },
        {
          "path": "contentieux.enCours",
          "id": "contentieux_en_cours",
          "label": "Un contentieux est-il en cours ?",
          "tooltip": "Exemples : litige avec la mairie, recours…",
          "name": "contentieux.enCours",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true
        },
        {
          "path": "contentieux.types",
          "id": "types_contentieux",
          "label": "Sélectionnez le(s) type(s) de contentieux",
          "name": "contentieux.types",
          "type": "checkbox-group",
          "requiredIf": {
            "path": "contentieux.enCours",
            "equals": "Oui"
          },
          "showIf": {
            "path": "contentieux.enCours",
            "equals": "Oui"
          },
          "options": [
            {
              "label": "Contentieux pénal d’urbanisme",
              "value": "penal"
            },
            {
              "label": "Contentieux judiciaire lié au bien",
              "value": "judiciaire"
            },
            {
              "label": "Litige avec la mairie",
              "value": "mairie"
            },
            {
              "label": "Recours contentieux devant le tribunal administratif",
              "value": "ta"
            },
            {
              "label": "Recours gracieux contre une décision d’urbanisme",
              "value": "gracieux"
            },
            {
              "label": "Contentieux portant sur la légalité des constructions",
              "value": "legalite"
            },
            {
              "label": "Autre",
              "value": "autre"
            }
          ]
        },
        {
          "path": "contentieux.autreDetail",
          "id": "contentieux_autre",
          "label": "Merci de préciser",
          "name": "contentieux.autreDetail",
          "type": "text",
          "requiredIf": {
            "path": "contentieux.types",
            "in": ["autre"]
          },
          "showIf": {
            "path": "contentieux.types",
            "in": ["autre"]
          },
          "placeholder": "Ex: détail du contentieux ou de la procédure"
        }
      ]
    },
    {
      "id": "servitudes",
      "label": "Servitudes",
      "fields": [
        {
          "path": "servitudes.existent",
          "id": "servitudes_existantes",
          "label": "Le bien est-il grevé de servitudes ? (droit de passage, etc)",
          "name": "servitudes.existent",
          "type": "select",
          "options": ["Oui", "Non"],
          "tooltip": "Des tiers sont autorisés à utiliser une partie du bien ou à en restreindre l’usage (ex : droit de passage)",
          "placeholder": "Sélectionnez une option",
          "required": true
        },
        {
          "path": "servitudes.types",
          "id": "types_servitudes",
          "label": "Sélectionnez le(s) type(s) de servitude(s)",
          "name": "servitudes.types",
          "type": "checkbox-group",
          "requiredIf": {
            "path": "servitudes.existent",
            "equals": "Oui"
          },
          "showIf": {
            "path": "servitudes.existent",
            "equals": "Oui"
          },
          "options": [
            {
              "label": "Passage",
              "value": "passage"
            },
            {
              "label": "Vue",
              "value": "vue"
            },
            {
              "label": "Canalisation(s) ou réseau",
              "value": "canalisation"
            },
            {
              "label": "Utilité publique (zones inondables, monuments historiques…)",
              "value": "utilite_publique"
            }
          ]
        }
      ]
    },
    {
      "id": "zonage",
      "label": "Zonage d’urbanisme",
      "fields": [
        {
          "path": "zonage.reglemente",
          "id": "zonage_reglemente",
          "label": "Le bien est-il situé dans une zone réglementée par un document d\u0027urbanisme ?",
          "name": "zonage.reglemente",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true
        },
        {
          "path": "zonage.type",
          "id": "type_zonage",
          "label": "Type de document",
          "name": "zonage.type",
          "type": "select",
          "requiredIf": {
            "path": "zonage.reglemente",
            "equals": "Oui"
          },
          "showIf": {
            "path": "zonage.reglemente",
            "equals": "Oui"
          },
          "options": [
            "Plan local d\u0027urbanisme (PLU)",
            "Carte communale",
            "Zone d\u0027aménagement (ZAC, secteur sauvegardé, etc.)",
            "Autre"
          ],
          "placeholder": "Sélectionnez un document"
        },
        {
          "path": "zonage.typeAutre",
          "id": "type_zonage_autre",
          "label": "Précisez le document d’urbanisme",
          "name": "zonage.typeAutre",
          "type": "text",
          "requiredIf": {
            "path": "zonage.type",
            "equals": "Autre"
          },
          "showIf": {
            "path": "zonage.type",
            "equals": "Autre"
          },
          "placeholder": "Ex: règlement national d’urbanisme local"
        }
      ]
    },
    {
      "id": "impact_travaux",
      "label": "Travaux à impact",
      "fields": [
        {
          "path": "travaux.impactExterieur",
          "id": "impact_exterieur",
          "label": "Des travaux à impact extérieur ou urbanistique ont-ils été réalisés ?",
          "name": "impactExterieur",
          "type": "select",
          "required": true,
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option"
        },
        {
          "path": "travaux.details",
          "id": "travaux_details",
          "label": "Liste des travaux",
          "name": "travauxDetails",
          "type": "array",
          "requiredIf": {
            "equals": "Oui",
            "path": "travaux.impactExterieur"
          },
          "showIf": {
            "equals": "Oui",
            "path": "travaux.impactExterieur"
          },
          "itemLabel": "Travaux {{index}}",
          "itemSchema": {
            "fields": [
              {
                "path": "arreteExiste",
                "id": "arrete_existe",
                "label": "Existe-t-il un arrêté d\u0027autorisation d\u0027urbanisme pour ces travaux ?",
                "tooltip": "Permis de construire / déclaration préalable / permis d’aménager. Ne cochez pas cette case si le document existe mais que vous ne l\u0027avez pas en votre possession.",
                "name": "arreteExiste",
                "type": "select",
                "placeholder": "Sélectionnez une option",
                "required": true,
                "options": ["Oui", "Non"]
              },
              {
                "path": "arreteType",
                "id": "arrete_type",
                "label": "Type d\u0027autorisation",
                "name": "arreteType",
                "type": "select",
                "options": [
                  "Permis de construire",
                  "Déclaration préalable",
                  "Permis d’aménager"
                ],
                "placeholder": "Sélectionnez une option",
                "requiredIf": {
                  "equals": "Oui",
                  "path": "arreteExiste"
                },
                "showIf": {
                  "equals": "Oui",
                  "path": "arreteExiste"
                }
              },
              {
                "path": "motifAbsenceArrete",
                "id": "motif_absence_arrete",
                "label": "Motif de l\u0027absence d\u0027arrêté d\u0027autorisation",
                "name": "motifAbsenceArrete",
                "type": "select",
                "tooltip": "Pour quelles raisons n\u0027y a-t-il pas de document d\u0027autorisation officielle pour ces travaux ?",
                "requiredIf": {
                  "path": "arreteExiste",
                  "equals": "Non"
                },
                "showIf": {
                  "path": "arreteExiste",
                  "equals": "Non"
                },
                "options": [
                  "Autorisation requise mais non obtenue",
                  "Autorisation non requise par le droit de l’urbanisme"
                ],
                "placeholder": "Sélectionnez un motif"
              },
              {
                "path": "typeTravaux",
                "id": "type_travaux",
                "label": "Les travaux portent sur :",
                "name": "typeTravaux",
                "type": "checkbox-group",
                "required": true,
                "options": [
                  {
                    "label": "Un changement de destination (usage du bien ou d’une pièce)",
                    "value": "Un changement de destination (usage du bien ou d’une pièce)"
                  },
                  {
                    "label": "L\u0027occupation ou l\u0027aménagement du sol (terrasse, piscine, abri, etc)",
                    "value": "L\u0027occupation ou l\u0027aménagement du sol (terrasse, piscine, abri, etc)"
                  },
                  {
                    "label": "L’aspect extérieur (toiture, matériaux visibles)",
                    "value": "L’aspect extérieur (toiture, matériaux visibles)"
                  },
                  {
                    "label": "Les surfaces ou volumes (agrandissement, extension)",
                    "value": "Les surfaces ou volumes (agrandissement, extension)"
                  },
                  {
                    "label": "Une surélévation (niveau supplémentaire par le haut)",
                    "value": "Une surélévation (niveau supplémentaire par le haut)"
                  },
                  {
                    "label": "Les façades (murs extérieurs)",
                    "value": "Les façades (murs extérieurs)"
                  },
                  {
                    "label": "Les structures porteuses avec impact extérieur (murs porteurs)",
                    "value": "Les structures porteuses avec impact extérieur (murs porteurs)"
                  },
                  {
                    "label": "Les ouvertures (fenêtres, baie, etc)",
                    "value": "Les ouvertures (fenêtres, baie, etc)"
                  },
                  {
                    "label": "La division intérieure (logements supplémentaires)",
                    "value": "La division intérieure (logements supplémentaires)"
                  }
                ]
              },
              {
                "path": "travauxAcheves",
                "id": "travaux_acheves",
                "label": "Les travaux sont-ils achevés ?",
                "name": "travauxAcheves",
                "type": "select",
                "options": ["Oui", "Non"],
                "placeholder": "Sélectionnez une option",
                "required": true
              },
              {
                "path": "dateAchevement",
                "id": "date_achevement",
                "label": "Date d\u0027achèvement prévue",
                "name": "dateAchevement",
                "type": "date",
                "mode": "date-picker",
                "placeholder": "jj/mm/aaaa",
                "showIf": {
                  "path": "travauxAcheves",
                  "equals": "Non"
                },
                "requiredIf": {
                  "path": "travauxAcheves",
                  "equals": "Non"
                }
              },
              {
                "path": "travauxNonConformes",
                "id": "travaux_non_conformes",
                "label": "Les travaux sont-ils conformes ?",
                "name": "travauxNonConformes",
                "type": "select",
                "options": ["Oui", "Non"],
                "placeholder": "Sélectionnez une option",
                "requiredIf": {
                  "path": "travauxAcheves",
                  "equals": "Oui"
                },
                "showIf": {
                  "path": "travauxAcheves",
                  "equals": "Oui"
                }
              },
              {
                "path": "dateDepotDaact",
                "id": "date_depot_daact",
                "label": "Date de dépôt de la DAACT",
                "name": "dateDepotDaact",
                "type": "date",
                "mode": "date-picker",
                "requiredIf": {
                  "all": [
                    {
                      "equals": "Oui",
                      "path": "arreteExiste"
                    },
                    {
                      "equals": "Oui",
                      "path": "travauxNonConformes"
                    },
                    {
                      "not": {
                        "equals": "Oui",
                        "path": "travauxAcheves"
                      }
                    }
                  ]
                },
                "showIf": {
                  "all": [
                    {
                      "equals": "Oui",
                      "path": "arreteExiste"
                    },
                    {
                      "equals": "Oui",
                      "path": "travauxNonConformes"
                    },
                    {
                      "not": {
                        "equals": "Oui",
                        "path": "travauxAcheves"
                      }
                    }
                  ]
                },
                "placeholder": "jj/mm/aaaa"
              },
              {
                "path": "plansDisponibles",
                "id": "plans_disponibles",
                "label": "Des plans approuvés sont-ils disponibles ?",
                "name": "plansDisponibles",
                "type": "select",
                "placeholder": "Sélectionnez une option",
                "options": ["Oui", "Non"],
                "requiredIf": {
                  "path": "arreteExiste",
                  "equals": "Oui"
                },
                "showIf": {
                  "path": "arreteExiste",
                  "equals": "Oui"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "cadastre",
      "label": "Références cadastrales",
      "fields": [
        {
          "path": "cadastre.section",
          "id": "section_cadastrale",
          "label": "Section",
          "name": "section",
          "type": "text",
          "required": true,
          "placeholder": "Ex: AB"
        },
        {
          "path": "cadastre.parcelle",
          "id": "numero_parcelle",
          "label": "Numéro de parcelle",
          "name": "parcelle",
          "type": "text",
          "required": true,
          "placeholder": "Ex: 123"
        },
        {
          "path": "cadastre.superficie",
          "id": "superficie_cadastrale",
          "label": "Superficie cadastrale (en m²)",
          "name": "superficie",
          "type": "number",
          "required": true,
          "placeholder": "Ex: 250"
        },
        {
          "path": "cadastre.planDisponible",
          "id": "plan_cadastral_disponible",
          "label": "Possédez-vous un extrait ou plan cadastral du bien ?",
          "name": "planDisponible",
          "type": "select",
          "options": ["Oui", "Non"],
          "placeholder": "Sélectionnez une option",
          "required": true
        }
      ]
    }
  ]
}
